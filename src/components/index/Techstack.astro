---
import { Image } from "astro:assets";

import javaIcon from "src/images/icons/Java.svg";
import javascriptIcon from "src/images/icons/Javascript.svg";
import svelteIcon from "src/images/icons/Svelte.svg";
import flutterIcon from "src/images/icons/Flutter.svg";
import dartIcon from "src/images/icons/dart.svg";
---

<div class="container mx-auto py-16">
  <div class="flex flex-col md:flex-row gap-8 md:h-24 justify-center">
    <p class="text-xl self-center md:border-r-black md:border-r-2 md:pr-8">
      <b>My tech</b>
    </p>
    <div
      class="flex flex-row gap-4 md:gap-8 h-16 justify-center w-full md:w-fit md:h-full"
    >
      <Image src={javaIcon} class="h-full w-fit" alt="Java icon" />

      <Image src={javascriptIcon} class="h-full w-fit" alt="JavaScript icon" />

      <Image src={svelteIcon} class="h-full w-fit" alt="Svelte icon" />

      <Image src={flutterIcon} class="h-full w-fit" alt="Flutter icon" />

      <Image src={dartIcon} class="h-full w-fit" alt="Dart icon" />
    </div>
  </div>
</div>
